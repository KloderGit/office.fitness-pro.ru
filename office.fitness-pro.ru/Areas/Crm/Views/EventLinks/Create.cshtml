@model office.fitness_pro.ru.Areas.Crm.Controllers.EventLinksController.CreateVM

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-6">
        <div class="card ">
            <div class="card-header ">
                <h4 class="card-title">Stacked Form</h4>
            </div>
            <div class="card-body ">
                <form asp-action="Create" asp-controller="EventLinks" asp-area="Crm">
                    <label class="control-label">AmoCrm</label>
                    <div class="form-group">
                        <select class="form-control" name="Amo">
                            <option selected value="">Выберите услугу AmoCRM</option>
                            @foreach (var amo in Model.Amo.OrderBy(x => x.Value))
                            {
                                <option value="@amo.Key">@amo.Value</option>
                            }
                        </select>
                    </div>

                    <label>Email address</label>
                    <div class="form-group">
                        <select class="form-control" name="lC">
                            <option selected value="">Выберите соответствующую программу 1С</option>
                            @foreach (var lc in Model.lC.OrderBy(x => x.Title))
                            {
                                <option value="@lc.Guid">@lc.Title + " | " + @lc.EventPartTime?.Title</option>
                            }
                        </select>
                    </div>
                    <div class="card-footer ">
                        <button type="submit" class="btn btn-info btn-round">Submit</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

